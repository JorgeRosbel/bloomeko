{
  "name": "bloomeko",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "pre-build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "check": "prettier --check .",
    "format": "prettier --write .",
    "prepare": "husky",
    "build": "pnpm run pre-build && tsx ./scripts/statics.ts",
    "push": "git add . && gitzen commit -y && git push"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint",
      "prettier --write"
    ],
    "*.{css,scss,json,md,yaml}": [
      "prettier --write"
    ]
  },
  "lint-staged:options": {
    "allowEmpty": true
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.15",
    "@tanstack/react-query": "^5.90.5",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "http-sentinel": "^1.0.13",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "lucide-react": "^0.546.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.15",
    "tw-animate-css": "^1.4.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
